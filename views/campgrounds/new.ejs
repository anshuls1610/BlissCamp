<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create new campground</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="campground name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description" required>
				</div>
				<div class="form-group">
  					<input class="form-control" type="number" name="cost" placeholder="cost in $" step="0.01" min="0.01" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block btn-control">Submit</button> 
				</div>
			</form>
				<a class="btn btn-lg btn-warning btn-control" href="/campgrounds">Back</a>
			</div>
	</div>
</div>
<%- include("../partials/footer") %>